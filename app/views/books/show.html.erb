<div class= "container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "/users/users",user: @user, book: @book %>
    </div>

<div class = "col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60,fallback:"no_image.jpg" %></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td> <%= link_to "edit", edit_book_path %> </td>
        <td> <% if @book.user == current_user %>
            <%= link_to "Destroy", books_path(@book), method: :delete %>
            <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
  </div>
</div>