<div class= "container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "/users/users",user: @user, book: @newbook %>
    </div>

<div class = "col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">

</div>
    <tbody>
      <tr>
        <td>
        <%= link_to user_path(@book.user_id) do %>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60,fallback:"no_image.jpg" %>
　　　　<br>
　　　　<%= @book.user.name %>
        <% end %>
        </td>

        <td><%= link_to book_path(@book.id) do %>
        <%= @book.title %><% end %>
        </td>

        <td><%= @book.body %></td>
          <td class=<%= "favorite_buttons_"+ @book.id.to_s %>>
　　　   <%= render "favorites/favorite", book: @book %>
　　      </td>
        <td> <% if @book.user == current_user %>
        <%= link_to "Edit", edit_book_path(@book),class:"btn btn-success btn-sm btn-block mb-3" %>
        <% end %>
        </td>
        <td> <% if @book.user == current_user %>
            <%= link_to "Destroy", book_path, method: :delete, data:{ confirm: '本当に消しますか？' },class:"btn btn-danger btn-sm btn-block mb-3" %>
            <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  <div class = "col-md-8 offset-md-1">
    <table class="table">
      <tbody>
      <tr>
        <% @book.book_comments.each do |book_comment| %>
        <td><p> <%= attachment_image_tag @myuser, :profile_image, :fill, 60, 60,fallback:"no_image.jpg" %></p></td>
        <td><%= book_comment.user.name %></td>
　　　　<td><%= book_comment.comment %></td>
         <% if book_comment.user == current_user %>
         <td><button type="button" class="btn btn-danger"><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete %></button> </td>
      </tr>
        <% end %>
        <% end %>
        </tbody>
        </table>
  </div>
      <div>
     <td class=<%= "book_comment_"+ book.id.to_s %>>
　　　<%= render "book_comments/book_comment", book: @book, book_comment: @book_comment %>
　　　</td>
      </div>
      <div>

　　　</div>
　</div>

