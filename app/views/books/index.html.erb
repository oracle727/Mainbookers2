<main>
<div class="container px-5 px-sm-0">

<div class= "row">

<div class="col-md-3">
  <%= render "users/users",user: @user, book: @book %>

</div>

<div class= "col-md-8 offset-md-1">
 <%= render "searches/search" %>
<h2>Books</h2>
<table class= "table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <tr>
      <% @books.each do |book| %>
      <td>
      <%= link_to user_path(book.user) do %>
      <%=  attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
       <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
      <td class=<%= "favorite_buttons_"+ book.id.to_s %>>
　　　<%= render "favorites/favorite", book: book %>
　　  </td>
  </td>
      <td><p><%= link_to "#{book.book_comments.count} コメント",  book_path(book.id) %></p></td>
     </tr>
       <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</main>