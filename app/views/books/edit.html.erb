<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@book, local:true do |f| %>
<h2>Title:</h2>
<p><% @book.title %></p>
<%= f.text_field :title %>

<h2>Opinion:</h2>
<p><% @book.body %></p>
<%= f.text_field :body %>

<%= f.submit 'Update Book' %>
<% end %>


<%= link_to "show",book_path(@book) %>
|
