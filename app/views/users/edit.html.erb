<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <div class="form-group">
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </div>
  <div class="form-group">
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
  <label for="inputImage">ProfileImage</label>
  <%= f.attachment_field :profile_image %>
  </div>
  <div class="form-group">
    <%= f.text_field :introduction, autofocus: true, id:"inputName", placeholder:"自己紹介"%>
    </div>
  <%= f.submit "Update User" %>
<% end %>
</div>
</div>
</div>
</main>
