<h2>Books search for <%= @word %> </h2>
<table class= "table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
    <th>title</th>
    <th>opinion</th>
    <th colspan="2"></th>
    </tr>
  </thead>
  <% if @range == "user" %>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60,fallback:"no_image.jpg" %></td>
      </tr>
      <% end %>
    </tbody>

    <% else %>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60,fallback:"no_image.jpg" %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
    <% end %>
</table>