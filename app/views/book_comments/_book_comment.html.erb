<% book.book_comments.each do |book_comment| %>
        <tr><td><p> <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60,fallback:"no_image.jpg" %></p></td>
         <td><%= book_comment.user.name %></td>
　　　　 <td><%= book_comment.comment %></td>
         <% if book_comment.user == current_user %>
          <td><button type="button" class="btn btn-danger"><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true %></button> </td>
          <% end %>
<% end %>
        </tr>